	author = {Abideen, Z.U. and Sun, H. and Yang, Z. and Fahim, H.},
	year = {2022},
	note = {Publisher: John Wiley and Sons Inc},
	keywords = {Convolution, Forecasting, Taxicabs, Spatial temporals, Large dataset, Public transportation, Backpropagation, Decoding, Demand forecasting, Demand pattern, Feature matrices, Flow optimization, Multimodule, Signal encoding, Temporal networks, Traffic flow, Transportation needs},
