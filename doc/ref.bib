	keywords = {Deep learning, Taxi demand prediction, Data models, Predictive models, Public transportation, Urban areas, Spatiotemporal phenomena, BERT, demand pattern, points of interest, spatial-temporal network, Time series analysis},
	pages = {9442--9454},
	annote = {cited By 8},
	file = {IEEE Xplore Abstract Record:/Users/probook/Zotero/storage/K3787BCC/9597473.html:text/html;IEEE Xplore Full Text PDF:/Users/probook/Zotero/storage/MA7SQ32C/Cao et al. - 2022 - BERT-Based Deep Spatial-Temporal Network for Taxi .pdf:application/pdf},
